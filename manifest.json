{
  "manifest_version": 3,
  "name": "Site Content Blocker",
  "version": "1.0",
  "description": "Blocks distracting content on social media sites while keeping essential features",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "css": ["instagram.css"],
      "js": ["instagram.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.reddit.com/*", "*://reddit.com/*"],
      "css": ["reddit.css"],
      "js": ["reddit.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "css": ["linkedin.css"],
      "js": ["linkedin.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.youtube.com/*", "*://youtube.com/*"],
      "css": ["youtube.css"],
      "js": ["youtube.js"],
      "run_at": "document_start"
    }
  ]
}
